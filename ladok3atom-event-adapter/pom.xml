<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>se.uu.its.ladok</groupId>
		<artifactId>ladok3-event</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>ladok3atom-event-adapter</artifactId>
	<version>${parent.version}</version>
	<packaging>bundle</packaging>
	<name>Ladok 3 Atom Event Adapter</name>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Import-Package>
							org.apache.abdera;version="[1.1,3]",
							org.apache.abdera.model;version="[1.1,3]",
							org.apache.abdera.protocol.client;version="[1.1,3]",
							org.apache.abdera.parser.stax;version="[1.1,3]",
							org.osgi.service.blueprint;version="[1.0.0,2.0.0]",
							com.ctc.wstx.stax,
							se.sunet.ati.ladok.atom;version="[0.0,1]",
							org.apache.camel.spring.spi;version="[2.10,2.14]",
							org.springframework.jms.connection,
							org.apache.activemq,
							org.apache.activemq.camel.component
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
